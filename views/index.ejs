<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

    <!-- Navbar -->
    <nav class="bg-indigo-600 text-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
            <h1 class="text-xl font-semibold">Panel de Administración</h1>
            <div class="flex space-x-4">
                <a href="/" class="hover:bg-indigo-500 px-3 py-2 rounded-md">Listado</a>
                <a href="/productos/add" class="hover:bg-indigo-500 px-3 py-2 rounded-md">Crear</a>
                <a href="/admin" class="hover:bg-indigo-500 px-3 py-2 rounded-md">Admin</a>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="max-w-7xl mx-auto px-6 py-10">

        <!-- Encabezado -->
        <h2 class="text-2xl font-bold text-gray-700 mb-8 text-center">Resumen General</h2>

        <!-- Métricas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
            <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-indigo-500">
                <h3 class="text-gray-500 text-sm uppercase">Productos</h3>
                <p class="text-3xl font-semibold text-gray-800 mt-2"><%= totalProductos || 120 %></p>
                <span class="text-green-500 text-sm">+8% este mes</span>
            </div>

            <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-emerald-500">
                <h3 class="text-gray-500 text-sm uppercase">Ventas</h3>
                <p class="text-3xl font-semibold text-gray-800 mt-2">350</p>
                <span class="text-green-500 text-sm">+15% respecto a septiembre</span>
            </div>

            <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-yellow-500">
                <h3 class="text-gray-500 text-sm uppercase">Ingresos</h3>
                <p class="text-3xl font-semibold text-gray-800 mt-2">S/ 12500</p>
                <span class="text-red-500 text-sm">-3% última semana</span>
            </div>

            <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-pink-500">
                <h3 class="text-gray-500 text-sm uppercase">Clientes</h3>
                <p class="text-3xl font-semibold text-gray-800 mt-2">94</p>
                <span class="text-green-500 text-sm">+12 nuevos</span>
            </div>
        </div>

        <!-- Botones de acción -->
        <div class="flex flex-wrap justify-center gap-4 mb-12">
            <a href="/productos/add" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-semibold shadow">
                Agregar Producto
            </a>
        </div>

        <!-- Tabla reciente -->
        <section class="bg-white shadow-md rounded-xl p-6">
            <h3 class="text-lg font-semibold text-gray-700 mb-4">Productos recientes</h3>
            <table class="min-w-full text-left text-gray-700">
                <thead>
                    <tr class="border-b">
                        <th class="py-3 px-4">Nombre</th>
                        <th class="py-3 px-4">Marca</th>
                        <th class="py-3 px-4">Descripción</th>
                        <th class="py-3 px-4">Precio</th>
                        <th class="py-3 px-4">Stock</th>
                        <th class="py-3 px-4">Imagen</th>
                        <th class="py-3 px-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(p => { %>
                        <tr class="border-b hover:bg-gray-50 transition">
                            <td class="py-3 px-4"><%= p.nombre %></td>
                            <td class="py-3 px-4"><%= p.marca %></td>
                            <td class="py-3 px-4"><%= p.descripcion %></td>
                            <td class="py-3 px-4">S/ <%= p.precio %></td>
                            <td class="py-3 px-4"><%= p.stock %></td>
                            <td class="py-3 px-4">
                                <% if (p.imagen && typeof p.imagen === 'string' && p.imagen.trim().length > 0) { %>
                                    <a href="<%= p.imagen %>" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:underline">Ver imagen</a>
                                <% } else { %>
                                    <span class="text-gray-400">Sin imagen</span>
                                <% } %>
                            </td>

                            <td class="py-3 px-4">
                                <div class="flex items-center gap-2">
                                    <a href="/producto/<%= p.id %>/edit" class="px-3 py-1.5 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-md">Editar</a>
                                    <form action="/producto/<%= p.id %>/delete" method="post" onsubmit="return confirm('¿Eliminar este producto?');">
                                        <button type="submit" class="px-3 py-1.5 bg-rose-600 hover:bg-rose-700 text-white text-sm font-medium rounded-md">Eliminar</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>

    </main>

    <footer class="text-center mt-10 text-gray-500 text-sm pb-4">
        © <%= new Date().getFullYear() %> - Dashboard Administrativo
    </footer>

</body>
</html>
